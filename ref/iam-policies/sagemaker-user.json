{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowListingRelevantResources",
            "Effect": "Allow",
            "Action": [
                "ecr:DescribeRepositories",
                "ecr:GetAuthorizationToken",
                "s3:ListAllMyBuckets",
                "s3:HeadBucket",
                "sagemaker:ListTrainingJobs"
            ],
            "Resource": "*"
        },
        {
            "Sid": "AllowS3AccessToSageMakerBucket",
            "Effect": "Allow",
            "Action": [
                "s3:DeleteObject",
                "s3:DeleteObjectTagging",
                "s3:AbortMultipartUpload",
                "s3:CreateMultipartUpload",
                "s3:GetObject",
                "s3:ListObject",
                "s3:PutObject",
                "s3:PutObjectTagging",
                "s3:PutObjectVersionTagging"
            ],
            "Resource": [
                "arn:<partition>:s3:::<your_sagemaker_bucket_here>",
                "arn:<parition>:s3:::<your_sagemaker_bucket_here>/*"
            ]
        },
        {
            "Sid": "AllowAccessToECRRepository",
            "Effect": "Allow",
            "Action": [
                "ecr:BatchCheckLayerAvailability",
                "ecr:GetDownloadUrlForLayer",
                "ecr:GetRepositoryPolicy",
                "ecr:ListImages",
                "ecr:DescribeImages",
                "ecr:BatchGetImage",
                "ecr:InitiateLayerUpload",
                "ecr:UploadLayerPart",
                "ecr:CompleteLayerUpload",
                "ecr:PutImage"
            ],
            "Resource": "arn:<parition>:ecr:<region>:<account>:repository/<your_repository_here>"
        },
        {
            "Sid": "SageMakerTraining",
            "Effect": "Allow",
            "Action": [
                "sagemaker:CreateTrainingJob",
                "sagemaker:DescribeTrainingJob",
                "sagemaker:StopTrainingJob"
            ],
            "Resource": "*"
        }
    ]
}